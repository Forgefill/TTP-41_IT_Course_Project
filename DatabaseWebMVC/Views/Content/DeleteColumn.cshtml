@model DatabaseWebMVC.Models.ColumnViewModel

@{
    ViewData["Title"] = "DeleteColumn";
}

<h1>Delete Column</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dbName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dbName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tableName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tableName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ColumnType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ColumnType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="DeleteColumn">
        <input asp-for="dbName" type="hidden" value="@Model.dbName" class="form-control" />
        <input asp-for="tableName" type="hidden" value="@Model.tableName" class="form-control" />
        <input asp-for="Id" type="hidden" value="@Model.Id" class="form-control" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back", "Index", "Content", new {dbName=Model.dbName, tableName = Model.tableName})
    </form>
</div>
