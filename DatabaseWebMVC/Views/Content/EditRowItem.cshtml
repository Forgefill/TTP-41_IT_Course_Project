@model DatabaseWebMVC.Models.EditRowItemViewModel

@{
    ViewData["Title"] = "EditRowItem";
}

<h1>Edit Row Item</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRowItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="dbName" type="hidden" value="@Model.dbName" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="tableName" type="hidden" value="@Model.tableName" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="rowId" type="hidden" value="@Model.rowId" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="columnId" type="hidden" value="@Model.columnId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="newValue" class="control-label"></label>
                @if(ViewBag.type == "Enum")
                {
                    <select asp-for="newValue" asp-items="@(new SelectList(ViewBag.enumTypes))" class="form-control" >

                    </select>
                    
                }
                else
                {
                    <input asp-for="newValue" class="form-control" />
                }
                <span asp-validation-for="newValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    @Html.ActionLink("Back", "Index", "Content", new {dbName=Model.dbName, tableName = Model.tableName})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
