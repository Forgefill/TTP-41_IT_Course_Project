@model DatabaseWebMVC.Models.TableViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TableViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dbName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dbName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tableName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tableName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="dbName" />
        <input type="hidden" asp-for="tableName" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to tables", "Index", "Table", new {dbName = Model.dbName})
    </form>
</div>
